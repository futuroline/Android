<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teacer_list_filter_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.malalaoshi.android.core.view.TitleBarView
        android:id="@+id/title_view"
        app:cusTitleTextSize="@dimen/text_size_large"
        app:cusTitleTextColor="@color/color_black_333333"
        app:cusLeftShow="true"
        app:cusLeftBackgroud="@drawable/core__back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray_dedede"
        />
    <FrameLayout
        android:id="@+id/fl_pager_fragment"
        android:background="@color/color_gray_f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>