<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_white_ffffff"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:src="@drawable/ic_timeallocate"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:maxHeight="100dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_black_939393"
        android:lineSpacingExtra="8dp"
        android:gravity="center_horizontal|top"
        tools:text="购课失败,课程被抢占，请重新选择时间段，如有付款，稍后会自动退款！"
         />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_blue_8fbcdd" />
    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_course_btn"
            android:textColor="@color/color_blue_8fbcdd"
            android:text="回到首页" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_blue_8fbcdd" />
        <TextView
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_course_btn"
            android:gravity="center"
            android:textColor="@color/color_blue_8fbcdd"
            android:text="查看其他时间" />
    </LinearLayout>
    <TextView
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_course_btn"
        android:gravity="center"
        android:textColor="@color/color_blue_8fbcdd"
        android:text="知道了" />
</LinearLayout>